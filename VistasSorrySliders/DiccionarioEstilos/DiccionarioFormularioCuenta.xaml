<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="TextBox" x:Key="estiloTxtBoxAzul">
        <Setter Property="Height" Value="45"/>
        <Setter Property="Width" Value="250"/>
        <Setter Property="BorderBrush" Value="#052B42"/>
        <Setter Property="BorderThickness" Value="4"/>
    </Style>
    <Style TargetType="TextBox" x:Key="estiloTxtBoxRojo">
        <Setter Property="Height" Value="45"/>
        <Setter Property="Width" Value="250"/>
        <Setter Property="BorderBrush" Value="Red"/>
        <Setter Property="BorderThickness" Value="4"/>
    </Style>
    <Style TargetType="Label" x:Key="estiloLbl">
        <Setter Property="Height" Value="45"/>
        <Setter Property="Width" Value="250"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontFamily" Value="{StaticResource FuentesTexto}"/>
    </Style>
</ResourceDictionary>