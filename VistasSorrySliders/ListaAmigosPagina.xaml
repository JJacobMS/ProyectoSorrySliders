<Page x:Class="VistasSorrySliders.ListaAmigosPagina"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VistasSorrySliders"
      mc:Ignorable="d" 
      d:DesignHeight="576" d:DesignWidth="409">
    <Page.Resources>
        <Style x:Key="estiloLblTextoListaAmigos" TargetType="Label">
            <Setter Property="FontFamily" Value="{StaticResource FuentesTitulo}"/>
            <Setter Property="Foreground" Value="#17033B"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="10,0,10,0"/>
        </Style>

        <Style x:Key="estiloBtnListaAmigos" TargetType="Button">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="90"/>
            <Setter Property="FontFamily" Value="{StaticResource FuentesTitulo}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="5" Background="#000000">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox" x:Key="estiloTxtBoxDatosMorado">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="15,0,15,0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="{StaticResource FuentesTexto}"/>
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Border CornerRadius="5" BorderThickness="3" BorderBrush="#17033B" Background="#EAD4F4">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="estiloLstBoxItemListaAmigos" TargetType="ListBoxItem">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Border BorderBrush="#17033B" BorderThickness="0,0,0,3">
                            <Grid Height="40">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width=".3*"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse Height="10" Width="10" Fill="Black" Margin="5,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                <Label Content="Nickname" FontSize="14" Margin="15,-3,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"
                                               Style="{StaticResource estiloLblTextoListaAmigos}"/>
                                <Label Content="Correo@gmail.com" FontSize="12" Margin="0,0,0,3" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                        Style="{StaticResource estiloLblTextoListaAmigos}"/>
                                <Button Grid.Column="1" Content="ENVIAR CÓDIGO" Margin="0,-5,10,0"
                                        Style="{StaticResource estiloBtnListaAmigos}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="estiloLstBoxAmigos" TargetType="ListBox">
            <Setter Property="Height" Value="150"/>
            <Setter Property="Margin" Value="10,0,10,0"/>
            <Setter Property="BorderThickness" Value="3" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Border Name="Border" BorderThickness="3" BorderBrush="#17033B" CornerRadius="2" Background="#EAD4F4">
                            <ScrollViewer Margin="0" Focusable="false">
                                <StackPanel Margin="0" IsItemsHost="True" />
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <Viewbox>
        <Grid Height="576" Width="409">
            <Border BorderBrush="#17033B" BorderThickness="3" CornerRadius="10" Margin="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition />
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label Content="INVITAR JUGADOR" Style="{StaticResource estiloLblTituloTextos}"/>
                    <StackPanel Grid.Row="1" VerticalAlignment="Center">
                        <Label Content="Lista de Amigos" Style="{StaticResource estiloLblTextoListaAmigos}"/>
                        <ListBox Style="{StaticResource estiloLstBoxAmigos}">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem" BasedOn="{StaticResource estiloLstBoxItemListaAmigos}"></Style>
                            </ListBox.ItemContainerStyle>
                            <ListBoxItem></ListBoxItem>
                        </ListBox>
                    </StackPanel>
                    <StackPanel Grid.Row="2" VerticalAlignment="Center">
                        <Label Content="Lista de Amigos" Style="{StaticResource estiloLblTextoListaAmigos}"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBox Width="230" Margin="10,5,5,5" HorizontalAlignment="Left" Style="{StaticResource estiloTxtBoxDatosMorado}"></TextBox>
                            <Button Content="BUSCAR" Margin="5" Height="25" Width="90" FontSize="14"
                                    Style="{StaticResource estiloBtnMorado}" HorizontalAlignment="Right"/>
                        </StackPanel>
                        <ListBox Style="{StaticResource estiloLstBoxAmigos}">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem" BasedOn="{StaticResource estiloLstBoxItemListaAmigos}"></Style>
                            </ListBox.ItemContainerStyle>
                            <ListBoxItem></ListBoxItem>

                        </ListBox>
                    </StackPanel>
                    <StackPanel Grid.Row="3" VerticalAlignment="Center">
                        <Label Content="Correo de Jugador sin Cuenta:" Style="{StaticResource estiloLblTextoListaAmigos}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Center">
                            <TextBox Width="230" Style="{StaticResource estiloTxtBoxDatosMorado}"></TextBox>
                            <Button Content="ENVIAR CÓDIGO" Margin="5"
                                    Style="{StaticResource estiloBtnListaAmigos}" HorizontalAlignment="Right"/>
                        </StackPanel>

                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Viewbox>

    
</Page>
